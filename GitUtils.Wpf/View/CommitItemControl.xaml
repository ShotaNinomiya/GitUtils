<UserControl x:Class="GitUtils.Wpf.View.CommitItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitUtils.Wpf.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <CheckBox IsChecked="{Binding IsChecked}" Content="Select Item" Margin="5"/>
            <TextBlock Text="{Binding Date}" Margin="5"/>
            <TextBlock Text="{Binding CommitHash}" Margin="5"/>
            <TextBlock Text="{Binding Author}" Margin="5"/>
            <TextBlock Text="{Binding Message}" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
