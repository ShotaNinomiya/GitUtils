<UserControl x:Class="GitUtils.Wpf.View.FolderSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitUtils.Wpf.View"
             mc:Ignorable="d">
    <Grid>
        <Button Content="Select Folder" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="Auto" Margin="10" Click="SelectFolderButton_Click"/>
        <TextBox Name="SelectedFolderPath" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,10,0" Width="360" Height="Auto"/>
    </Grid>
</UserControl>
