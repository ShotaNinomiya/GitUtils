<Window x:Class="GitUtils.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitUtils.Wpf.View"
        mc:Ignorable="d"
        Title="GitUtil" Height="450" Width="800">
    <Grid>
        <local:FolderSelectorControl HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,10,0" Width="360" DataContext="{Binding FolderSelectorViewModel}"/>
        <local:CommitHashControl x:Name="AdditionalUserControl1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,10,0" Width="360" DataContext="{Binding AdditionalUserControl1ViewModel}"/>
        <local:CommitHashControl x:Name="AdditionalUserControl2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,10,0" Width="360" DataContext="{Binding AdditionalUserControl2ViewModel}"/>
        <ListBox ItemsSource="{Binding Items}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,170,10,0" Width="360" Height="200">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:CommitItemControl DataContext="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
